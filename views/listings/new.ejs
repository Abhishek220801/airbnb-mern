<% layout('/layouts/boilerplate') %>
<div class="row mt-3">
    <div class="col-8">
    <h3>Create a New Listing</h3>
    <form action="/listings" method="POST">
        <div>
            <label for="title" class="form-label mt-4">Title</label>
            <input type="text" name="listing[title]" class="form-control mb-3"/>
        </div>
        <div>
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control mb-3"></textarea>
        </div>
        <div>
            <label for="title" class="form-label">Image Link</label>
            <input name="listing[image]" type="text" class="form-control mb-3">
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="listing[price]" class="form-control mb-3"/>
            </div>
            <div class="mb-3 col-md -8">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" class="form-control mb-3"/>
            </div>
        </div>
        <div>
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" class="form-control"/>
        </div>
        <button class="btn btn-dark add-btn mb-5 mt-3">Add</button>
    </form>
</div>